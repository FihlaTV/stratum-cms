<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="keystone.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="keystone">
          <match url="/*" />
          <action type="Rewrite" url="keystone.js" />
        </rule>
      </rules>
    </rewrite>
        <directoryBrowse enabled="true" />
        <iisnode
          loggingEnabled="true"
          logDirectory="logs"
          devErrorsEnabled="true"
          debuggingEnabled="true"
          nodeProcessCountPerApplication="0"
          />
  </system.webServer>
</configuration>
