{{!< default}}
<div id="head-carousel" class="carousel slide" data-ride="carousel" data-wrap="true" data-interval="3000">
	<ol class="carousel-indicators">
		{{# each data.news}}
		{{#if image.exists}}
		<li data-target="#head-carousel" data-slide-to="{{@index}}" {{#if @first }}class="active"{{/if}}></li>
		{{/if}}		
		{{/each}}
	</ol>
	<!-- Indicators -->
	<div class="carousel-inner" role="listbox">
		{{# each data.news}}
		{{#if image.exists}}
		<div class="item {{#if @first }}active{{/if}}">
			<a href="{{newsUrl slug}}">
				<img src="{{cloudinaryUrl image width="1024" height="400" crop="fill" gravity="north"}}">
			</a>
			<div class="carousel-caption">
				<h2>{{{title}}}</h2>
				<p class="hidden-xs">
					{{content.brief}}
					<a href="{{newsUrl slug}}">...l√§s mer</a>
				</p>
			</div>
		</div>
		{{/if}}
		{{/each}}
	</div>
	<!-- Controls -->
	<a class="left carousel-control" href="#head-carousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#head-carousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
{{#with data.startPage}}
<div class="container-fluid">
	<div class="row">
	<div class="col-sm-8">
		{{!-- <img src="/images/logo.svg" width="160" class="pull-right"> --}}
		<h1>{{header}}</h1>
		{{description}}
		<hr>
		<p>We have created a default Admin user for you with the email <strong>user@keystonejs.com</strong> and the password <strong>admin</strong>.</p>
		<p><a href="/keystone/signin" style="margin-right: 10px" class="btn btn-lg btn-primary">Sign in</a> to use the Admin UI.</p>
		<hr>
		<p>
			Remember to <a href='https://github.com/keystonejs/keystone' target='_blank'>Star KeystoneJS on GitHub</a> and
			<a href='https://twitter.com/keystonejs' target='_blank'>follow @keystonejs</a> on twitter for updates.
		</p>
	</div>
	<div class="col-sm-4">
	{{#ifeq informationBlurb.type 'newsRoll'}}
		{{>newsroll ./../..}}
	{{/ifeq}}
	{{#ifeq informationBlurb.type 'newsItem'}}
		{{>newswidget ./../..}}
	{{/ifeq}}
	{{#ifeq informationBlurb.type 'meeting'}}
		Meeting
	{{/ifeq}}
	{{#ifeq informationBlurb.type 'image'}}
	<div class="caption-ct">
		<img src="{{cloudinaryUrl informationBlurb.image width=600 height=400 crop='fill'}}" class="img-responsive">
		{{#if informationBlurb.imageText}}
		<div class="caption-text">
			{{informationBlurb.imageText}}
		</div>
		{{/if}}
	</div>
	{{/ifeq}}
	</div>
	{{/with}}
	</div>
	<div class="row">
		{{#each data.widgets}}
		<div class="col-sm-4 col-lg-3">
			{{>stratumwidget}}
		</div>
		{{/each}}
	</div>
</div>

