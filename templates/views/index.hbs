{{!< default}}
<div class="container">
	{{#if data.startPage.jumbotron.isVisible}}
	<div class="jumbotron">
		{{#with data.startPage.jumbotron}}
		<h1>{{header}}</h1>
		<p class="lead">
			{{{description.html}}}
		</p>
		{{/with}}
		<div class="row">
		{{#each data.startPageWidgets}}
			<div class="startpage-widget col-md-15 col-sm-4 col-xs-6">
				<div class="">
					<span class="startpage-widget-digit">
						{{digit}}
					</span>
					<span class="startpage-widget-text">{{description}}</span>
					<a href="#stat">Se mer statistik.</a>
				</div>
			</div>
		{{/each}}
		</div>
	</div>
	{{/if}}
	<div class="row">
	<div class="col-md-7">
		{{#with data.startPage}}
		<div class="base-column brief-info-column{{#ifeq informationBlurb.type 'image'}} startpage-description-height{{/ifeq}}">
			<h2>{{header}}</h2>
			<p class="lead">{{{description.html}}}</p>
		</div>
		{{/with}}
	</div>
	<div class="col-md-5">
	{{#if isPortal}}
		<h2>Delregister</h2>
		<div class="sub-registers">
			<ul>
			{{#each data.register.subRegisters}}
				<a href="//{{shortName}}.{{../topHost}}"><li>{{name}}</li></a>
			{{/each}}
			</ul>
		</div>
	{{/if}}
	{{#with data.startPage}}
	{{#ifeq informationBlurb.type 'newsRoll'}}
		{{>newsroll ../data.news}}
	{{/ifeq}}
	{{#ifeq informationBlurb.type 'newsItem'}}
		{{>newswidget ../data.firstNews}}
	{{/ifeq}}
	{{#ifeq informationBlurb.type 'meeting'}}
		<h2>Kommande m√∂te</h2>
		Meeting
	{{/ifeq}}
	{{#ifeq informationBlurb.type 'image'}}
		{{{cloudinaryImage informationBlurb.image width=720 height=540 crop='fill' class="img-responsive base-column"}}}
	</div>
	{{/ifeq}}
	</div>
	{{/with}}
	</div>
	{{#if isPortal}}
	{{else}}
	<div class="row">
		{{#each data.widgets}}
		<div class="col-sm-4 col-lg-3">
			{{>stratumwidget}}
		</div>
		{{/each}}
	</div>
	{{/if}}
</div>
