<div class="jumbotron{{#if isPortal}} jumbotron-portal{{/if}}">
	<h1>{{jumbotron.header}}</h1>
	<div class="jumbotron-description">
		{{{jumbotron.description.html}}}
	</div>
	{{#unless isPortal}}
	<div class="row">
	{{#each widgets}}
		<div class="startpage-widget col-md-{{#ifGreaterThan ../widgets.length 3}}3{{else}}4{{/ifGreaterThan}} col-sm-4">
			<div class="">
				{{#if keystoneWidget}}
				{{#with keystoneWidget}}
				<div class="keystone-widget" data-keystone-widget="{{name}}" data-widget-description="{{../description}}" data-widget-properties="{{../widget.properties}}"></div>
				{{/with}}
				{{else}}
				<span class="startpage-widget-digit">
					{{digit}}
				</span>
				<span class="startpage-widget-text">{{description}}</span>
				{{/if}}
				{{#if link}}
				<a href="{{link}}">{{linkText}}</a>
				{{/if}}
			</div>
		</div>
	{{/each}}
	</div>
	{{/unless}}
</div>
