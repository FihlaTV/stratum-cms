	<a href="{{newsUrl slug}}">
	{{#if image}}
	{{{cloudinaryImage image width="500" height="500" crop="fill" class="img-responsive"}}}
	{{/if}}
	<div class="caption-text news-widget-caption">
		<h2>{{title}}</h2>
