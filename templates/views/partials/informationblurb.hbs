{{#ifeq blurb.type 'newsRoll'}}
	{{>newsroll news}}
{{/ifeq}}
{{#ifeq blurb.type 'newsItem'}}
	{{#if blurb.newsItem}}
	{{>newswidget newsItem=blurb.newsItem layout=blurb.newsItemLayout}}
	{{else}}
	{{>newswidget newsItem=firstNews layout=blurb.newsItemLayout}}
	{{/if}}
{{/ifeq}}
{{#ifeq blurb.type 'image'}}
	{{{cloudinaryImage blurb.image width=720 height=540 crop='fill' class="img-responsive base-column"}}}
{{/ifeq}}
